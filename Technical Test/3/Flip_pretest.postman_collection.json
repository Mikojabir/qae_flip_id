			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const body = pm.response.json();\r",
							"\r",
							"/**\r",
							" * To Validation Response Code\r",
							" */\r",
							"pm.test('TC1 - Response Code Status', function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"/**\r",
							" * To Validation Data Type on Response Body\r",
							" */\r",
							"pm.test('TC2 - Validation data type on response body', function(){\r",
							"    \r",
							"    pm.expect(body.data).to.be.an('object');\r",
							"    pm.expect(body.data.id).to.be.a('number');\r",
							"    pm.expect(body.data.email).to.be.a('string');\r",
							"    pm.expect(body.data.first_name).to.be.a('string');\r",
							"    pm.expect(body.data.last_name).to.be.a('string');\r",
							"    pm.expect(body.data.avatar).to.be.a('string');\r",
							"\r",
							"    //Support\r",
							"    pm.expect(body.support).to.be.an('object');\r",
							"    pm.expect(body.support.url).to.be.a('string');\r",
							"    pm.expect(body.support.text).to.be.a('string');\r",
							"});\r",
							"\r",
							"/**\r",
							" * To Validation Value on Response Body\r",
							" */\r",
							"pm.test('TC3 - Value check on response body', function(){\r",
							"\r",
							"    pm.expect(body.data.id).eql(2);\r",
							"    pm.expect(body.data.email).eql('janet.weaver@reqres.in');\r",
							"    pm.expect(body.data.first_name).eql('Janet');\r",
							"    pm.expect(body.data.last_name).eql('Weaver');\r",
							"    pm.expect(body.data.avatar).eql('https://reqres.in/img/faces/2-image.jpg');\r",
							"});\r",
							"\r",
							"/**\r",
							" * Negative Case:\r",
							" * User not found\r",
							" */\r",
							"pm.test('TC4 - User Not Found',function(){\r",
							"\r",
							"var baseURL = 'https://reqres.in/api/users?page=1&id=9099'\r",
							"var setting = {\r",
							"  url: baseURL,\r",
							"  method: 'GET',\r",
							"  header: {\r",
							"      \"Content-Type\": \"application/json\"\r",
							"  }\r",
							"}\r",
							"pm.sendRequest(setting, (err, response) => {\r",
							"\r",
							"    var respCode = response.code\r",
							"\r",
							"        if(respCode == 404){\r",
							"            console.info(\"Response Code - Passed\")\r",
							"            console.log(respCode)\r",
							"        } else {\r",
							"            console.error(\"2. Error, Response Code Not Passed\")\r",
							"            console.log(respCode)\r",
							"        }\r",
							"    });\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
